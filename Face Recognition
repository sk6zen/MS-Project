import cv2

face_cascade = cv2.CascadeClassifier('haarcascade_frontalface_default.xml')
cap = cv2.VideoCapture(0)
#The object for video capture is created.

while True:
   , img = cap.read()
   
   grayImg = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)
   #The video is converted into grayscale.
   
   faces = face_cascade.detectMultiScale(grayImg, 1.1, 4)
   #Faces are detected using cascade file.
   
   for(x,y,w,h) in faces:
    cv2.rectangle(img, (x,y), (x+w,y+h), (255,0,0), 2)
    #A rectangle is drawn on the recognised face.
   
   cv2.imshow('img',img)
   x = cv2.waitKey(30) & 0xff
   if x==25:
    break
   cap.release()
